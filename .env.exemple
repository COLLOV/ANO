LLM_MODE=api
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=cle
# LLM_MODE=local
# VLLM_BASE_URL=http://127.0.0.1:8001/v1
# Z_LOCAL_MODEL=GLM-4.5-Air

# Workers
# Pour le CLI (utilisé si --workers n'est pas fourni)
CLI_WORKERS=20
# Pour l'API uvicorn
API_WORKERS=1

# Consolidation LLM (batch)
# Taille des lots pour la consolidation (labels uniques par appel LLM)
CONSOLIDATION_BATCH_SIZE=500
# Nombre de passes de consolidation (1 = une seule passe)
CONSOLIDATION_ROUNDS=1
# Heuristique de fusion (optionnelle)
# Mapping JSON {"canonique": ["syn1", "syn2"]}
TAXONOMY_SYNONYMS=
# Limiter le nombre de catégories cibles (ex: 20). Omettre pour laisser libre.
MAX_CATEGORIES=
# Seuil de similarité (0.0-1.0) pour la fusion heuristique
MERGE_THRESHOLD=0.86
